%header.navbar.navbar-fixed-top.navbar-inverse
  %nav
    %div{:style => "display:flex;justify-content:space-between;flex-direction:row;"}
      %div{:style => "display:flex;flex-direction:row;align-items:center;gap:10px;padding-left:10px;"}
        %img{:alt => "Logo", :src => 'assets/logo.svg', :title => "Default image",:style => 'height:36px' }
        %div{:style => "color:white;font-size:32px"}= link_to "Expert", root_path
      %ul.nav.navbar-nav
        - if signed_in?
          %li.logged
            #{current_user.email}
          = gravatar_for current_user

          .dropdown{:style => "padding-right:80px"}
            %label{:style => "margin-top:8px"} #{current_user.name}
            .dropdown-content{:style => "background-color:gray"}
              %li= link_to t('.profile'), current_user
              %li= link_to t('.sign_out'), signout_path, method: "delete"
        - else
          %li= link_to t('.sign_in'), signin_path